<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@+id/top_border_outside"
        >
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <stroke
                android:width="4dp"
                android:color="#1ef2af"
                />
        </shape>
    </item>
    <item
        android:id="@+id/top_border_inside"
        android:bottom="-4dp"
        android:left="-4dp"
        android:right="-4dp"
        android:top="-4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <stroke
                android:width="8dp"
                android:color="#1ef2af"
                />
            <corners
                android:radius="14dp"
                />
        </shape>
    </item>
</layer-list>
